<% if notice %>
<p><%= notice %></p>
<% end %>

<h1>Current Catalog</h1>
<% @products.in_groups_of(3).each do |group| %>
<div class="row">
  <% group.each do |product| %>
    <% if product %>
      <div class="col-md-3">
        <div class="thumbnail">
          <div class="productImage"><%= image_tag(product.image_url) %></div>
          <h3 class="text-center"><%= product.title %></h3>
          <p class="text-center"><%= product.description %></p>
          <p class="text-center"><%= sprintf("$%0.02f", product.price) %></p>
          <p class="text-center"><a href="#" class="btn btn-primary addCart" role="button">Add to Cart</a></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<% end %>
